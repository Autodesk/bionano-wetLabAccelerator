{
  "name": "Example absorbance",
  "metadata": {
    "description": "Measure absorbance of a specified wavelength (between 300 nm - 1000 nm)"
  },
  "loop": 1,
  "steps": [
    {
      "operation": "absorbance",
      "requirements": {},
      "transformations": [
        {
          "wells": "wells"
        }
      ],
      "fields": [
        {
          "name": "dataref",
          "type": "string",
          "value": "dataref_${index}"
        },
        {
          "name": "wells",
          "type": "aliquot+",
          "singleContainer" : false,
          "value": [
            {
              "container" : "growth_plate",
              "well" : "A1"
            },
            {
              "container" : "growth_plate",
              "well" : "A2"
            }
          ]
        },
        {
          "name": "wavelength",
          "type": "length",
          "value": "600:nanometer",
          "inputAttrs" : {
            "min" : 300,
            "max" : 1000
          }
        },
        {
          "name": "num_flashes",
          "type": "integer",
          "optional" : true,
          "default": 25,
          "value": 25
        }
      ]
    }
  ]
}
