{
  "groups": [
    {
      "name": "Cover Example",
      "metadata": {
        "description": "Cover a plate with a specified lid"
      },
      "inputs" : {
        "myPlate" : "container"
      },
      "steps": [
        {
          "operation": "cover",
          "requirements": {},
          "transforms": [
            {
              "container": "object"
            }
          ],
          "fields": [
            {
              "name": "object",
              "type": "container",
              "value": "${myPlate}"
            },
            {
              "name": "lid",
              "type": "options",
              "options" : [
                "standard",
                "universal",
                "low_evaporation"
              ],
              "value": "standard"
            }
          ]
        }
      ]
    }
  ]
}
