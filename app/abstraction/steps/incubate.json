{
  "name": "Incubation Step",
  "metadata": {
    "description": "Incubate a container at a given temperature for a specified amount of time"
  },
  "loop": 12,
  "steps": [
    {
      "operation": "incubate",
      "requirements": {},
      "transforms": [
        {
          "container": "object"
        }
      ],
      "fields": [
        {
          "name": "object",
          "type": "container",
          "value": "growth_plate"
        },
        {
          "name": "where",
          "type": "option",
          "options" : [
            "ambient",
            "warm_37",
            "cold_4",
            "cold_20",
            "cold_80"
          ],
          "value": "warm_37"
        },
        {
          "name": "duration",
          "type": "duration",
          "value": "60:minute"
        },
        {
          "name": "shaking",
          "type": "boolean",
          "default": false,
          "value": true
        }
      ]
    }
  ]
}
