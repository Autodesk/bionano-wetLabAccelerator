{
  "name": "Incubate/Absorbance Series 1",
  "metadata": {
    "description": "Incubate and measure E. coli in growth_plate_1 for 12 hours"
  },
  "loop": 12,
  "steps": [
    {
      "operation": "incubate",
      "requirements": {},
      "transforms": [
        {
          "container": "object"
        }
      ],
      "fields": [
        {
          "name": "object",
          "type": "container",
          "value": "growth_plate_1"
        },
        {
          "name": "where",
          "type": "temperature",
          "value": "warm_37"
        },
        {
          "name": "duration",
          "type": "string",
          "value": "60:minute"
        },
        {
          "name": "shaking",
          "type": "boolean",
          "value": true
        }
      ]
    },
    {
      "operation": "absorbance",
      "requirements": {},
      "transformations": [
        {
          "container": "object",
          "wells": "wells"
        }
      ],
      "fields": [
        {
          "name": "dataref",
          "type": "string",
          "value": "dataref_${index}"
        },
        {
          "name": "object",
          "type": "container",
          "value": "growth_plate_1"
        },
        {
          "name": "wells",
          "type": "well",
          "isArray": true,
          "value": [
            "A1",
            "A2"
          ]
        },
        {
          "name": "num_flashes",
          "type": "integer",
          "value": 25
        },
        {
          "name": "wavelength",
          "type": "length",
          "value": "600:nanometer"
        }
      ]
    }
  ]
}
